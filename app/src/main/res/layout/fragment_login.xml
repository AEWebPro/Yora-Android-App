<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:id="@+id/fragment_login_userName"
        android:layout_marginBottom="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:maxLines="1"
        android:id="@+id/fragment_login_password"
        android:layout_below="@id/fragment_login_userName"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/fragment_login_password"
        android:background="@color/colorPrimaryDarker"
        android:textColor="#ffffff"
        android:id="@+id/fragment_login_loginButton"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_layout_progress"
        android:layout_alignTop="@id/fragment_login_loginButton"
        android:layout_alignBottom="@id/fragment_login_loginButton"
        android:layout_centerHorizontal="true"
        android:indeterminateOnly="true"
        android:visibility="gone"
        style="?android:attr/progressBarStyleInverse"/>

</RelativeLayout>